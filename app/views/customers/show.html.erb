
<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <h3>マイページ</h3>
            <% if @customer.id == current_customer.id %>
        <div class="row">
            <ul class="list-inline">
                <li class="">
                    <%= "登録情報" %>
                </li>
                <li class="">
                    <%= link_to "プロフィール編集", edit_customer_path(@customer), class: 'btn-sm btn-primary' %>
                </li>
                <li class="">
                    <%= link_to "パスワードを変更する", edit_registration_path(@customer), class: 'btn-sm btn-primary' %>
                </li>
            </ul>
        </div>

        <table class="table table-striped table-bordered table-hover">
            <tbody>
                <tr>
                    <td>名前</td>
                    <td><%= "#{current_customer.name_last}　#{current_customer.name_first}" %></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= "#{current_customer.name_last_kana}　#{current_customer.name_first_kana}" %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= "#{current_customer.postal_code}" %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= "#{current_customer.address}" %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= "#{current_customer.phone_number}" %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= "#{current_customer.email}" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="row">
            <ul class="list-inline">
                <li class="">
                    <%= "配送先" %>
                </li>
                <li class="">
                    <%= link_to "一覧を見る", addresses_path(@customer), class: 'btn-sm btn-primary' %>
                </li>
            </ul>
        </div>
        <div class="row">
            <ul class="list-inline">
                <li class="">
                    <%= "注文履歴" %>
                </li>
                <li class="">
                    <%= link_to "一覧を見る", orders_path(@customer), class: 'btn-sm btn-primary' %>
                </li>
            </ul>
        </div>
    </div>
</div>
