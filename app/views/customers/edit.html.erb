<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h3 class="">プロフィール編集</h3>
            <div style="margin: 10px 0 10px 10px; text-align: right;">
                <%= link_to "退会する", customers_exit_path, class: "btn-sm btn-danger"%>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <%= form_for(@customer) do |f| %>
            <div class="panel panel-primary">
                <div class="panel-heading" style="text-align: center;">
                    <b>プロフィール編集フォーム</b>
                </div>
                <table class="table table-bordered table-content">
                    <tbody>
                        <tr>
                            <th class="info">
                                <%= f.label :氏名 %>
                            </th>
                            <td>
                                <%= f.text_field :name_last, class: "text-field-small" %>
                                <%= f.text_field :name_first, class: "text-field-small" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">
                                <%= f.label :カナ %>
                            </th>
                            <td>
                                <%= f.text_field :name_last_kana, class: "text-field-small" %>
                                <%= f.text_field :name_first_kana, class: "text-field-small" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">
                                <%= f.label :郵便番号 %>(ハイフンなし7桁)
                            </th>
                            <td>
                                <%= f.text_field :postal_code, class: "text-field-lage" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">
                                <%= f.label :住所 %>
                            </th>
                            <td>
                                <%= f.text_field :address, class: "text-field-lage" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">
                                <%= f.label :電話番号 %>
                            </th>
                            <td>
                                <%= f.text_field :phone_number, class: "text-field-lage" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">
                                <%= f.label :メールアドレス %>
                            </th>
                            <td>
                                <%= f.email_field :email, class: "text-field-lage" %>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div style="text-align: center">
            <%= f.submit "編集内容を保存する", class: "btn-sm btn-primary" %>
        </div>
            <% end %>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>