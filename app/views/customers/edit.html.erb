<h2 class="">顧客情報編集</h2>
<%= link_to "退会する", customers_exit_path, class: "btn btn-danger" %>
		<%= form_for(@customer) do |f| %>
		<table class="table">
			<tbody>
        		<tr>
					<td><%= f.label :氏名 %></td>
    　　　　　　      <td><%= f.text_field :name_last %><%= f.text_field :name_first %></td>
                </tr>
                <tr>
					<td><%= f.label :カナ %></td>
    　　　　　　      <td><%= f.text_field :name_last_kana %><%= f.text_field :name_first_kana %></td>
                </tr>
    			<tr>
                	<td><%= f.label :郵便番号 %></td>
    				<td><%= f.text_field :postal_code %></td>
    			</tr>
    			<tr>
                	<td><%= f.label :住所 %></td>
    				<td><%= f.text_field :address %></td>
    			</tr>
    			<tr>
                	<td><%= f.label :電話番号 %></td>
    				<td><%= f.text_field :phone_number %></td>
    			</tr>
    			<tr>
                	<td><%= f.label :メールアドレス %></td>
    				<td><%= f.email_field :email %></td>
    			</tr>
    		</tbody>
	    </table>
		<%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
	<% end %>