<div class="col-md-3"></div>
<div class="row">
    <div class="col-md-6">
        <h2>新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <div class="field">
                    <td>
                        <%= f.label :"名前 (姓・名)" %>
                    </td>
                    <td>
                        <%= f.text_field :name_last, autofocus: true %>
                        <%= f.text_field :name_first %>
                    </td>
                </div>
            </tr>
            <tr>
                <div class="field">
                    <td>
                        <%= f.label :"名前 (カナ姓・カナ名)" %>
                    </td>
                    <td>
                        <%= f.text_field :name_last_kana %>
                        <%= f.text_field :name_first_kana %>
                    </td>
                </div>
                </td>
            </tr>
            <tr>
                <div class="field">
                    <td>
                        <%= f.label :"郵便番号（ハイフン無し7桁）" %>
                    </td>
                    <td>
                        <%= f.text_field :postal_code %>
                    </td>
                </div>
            <tr>
                <div class="field">
                    <td>
                        <%= f.label :"住所" %>
                    </td>
                    <td>
                        <%= f.text_field :address %>
                    </td>
                </div>
            </tr>
            <tr>
                <div class="field">
                    <td>
                        <%= f.label :"電話番号" %>
                    </td>
                    <td>
                        <%= f.text_field :phone_number %>
                    </td>
                </div>
            </tr>
            <tr>
                <div class="field">
                    <td>
                        <%= f.label :"メールアドレス" %>
                    </td>
                    <td>
                        <%= f.email_field :email %>
                    </td>
                </div>
            </tr>
            <tr>
                <div class="field">
                    <td>
                        <%= f.label :パスワード %>
                    </td>
                    <td>
                        <% if @minimum_password_length %>
                        <% end %>
                        <%= f.password_field :password, autocomplete: "new-password" %>
                    </td>
                </div>
            </tr>
        </table>
        <div class="actions">
            <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>
<div class="col-md-3"></div>