<h2>注文情報確認</h2>

<table>
	<tbody>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
		</tr>

		<% @cart_items.each do |item| %>
		<tr>
			<td></td>
			<td><%= ((item.item.non_tax_price * @tax).floor).to_s(:delimited) %></td>
			<td><%= item.amount %></td>
			<td><%= ((item.item.non_tax_price * @tax * item.amount).floor).to_s(:delimited) %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= form_for :@order, url: cart_items_thanks_path do |f| %>
<table>
	<tbody>
		<tr>
			<th>送料</th>
			<td>800</td>
		</tr>
		<tr>
			<th>商品合計</th>
			<td>

			</td>
		</tr>
		<tr>
			<th>請求金額</th>
			<td>

			</td>
		</tr>
	</tbody>
</table>

	<p>支払方法 <%= @payment %><%= f.hidden_field @payment %></p>
	<p>お届け先 <%= @ship_address %><%= f.hidden_field :postal_code %><%= f.hidden_field :address %><br>
	<%= f.hidden_field :name %></p>

	<%= f.submit "購入を確定する" %>

<% end %>