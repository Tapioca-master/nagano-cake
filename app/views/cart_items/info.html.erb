<h2>購入情報入力</h2>
	<%= form_tag(cart_items_confirm_path, method: :post)  do %>

<h3><strong>支払方法</strong></h3>
  	<label><%= radio_button_tag :payment, :クレジットカード %>クレジットカード</label><br>
  	<label><%= radio_button_tag :payment, :銀行振込 %>銀行振込</label>

<h3><strong>お届け先</strong></h3>
	<label><%= radio_button_tag :ship_address, current_customer.addresses %>ご自身の住所</label><br>
		<%= current_customer.postal_code %><%= current_customer.address %><br>
		<%= current_customer.name_first %><br>
	<label><%= radio_button_tag :ship_address, :registered_address %>登録済み住所から選択</label>
		<%= select_tag(:ship_name, options_for_select(current_customer.addresses.collect {|a|[a.address, a.id]}), include_blank: true) %><br>
	<label><%= radio_button_tag :ship_address, "new_address" %>新しいお届け先</label>
			<div>
				<label>郵便番号</label>
				<%= text_field_tag :postal_code %>
	  		</div>
	  		<div>
				<label>住所</label>
				<%= text_field_tag :address %>
	  		</div>
	  		<div>
				<label>宛名</label>
				<%= text_field_tag :name %>
	  		</div>
	<%= submit_tag "確認画面へ" %>
	<% end %>