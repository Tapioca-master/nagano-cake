<div class= "container">
<h3>ショッピングカート</h3>
	<table class="table table-striped table-bordered table-hover">
			<tr>
				<th>商品名</th>
				<th>単価(税込)</th>
				<th>個数</th>
				<th>小計</th>
				<th><%= button_to 'カートを空にする', empty_cart_items_path, method: :delete, data: {confirm: 'カートを削除してよろしいですか？'},  class: 'btn-sm btn-danger center-block' %></th>
			</tr>
		<tbody>
			<% total = 0 %>
			<% @cart_items.each do |cart_item| %>
				<tr>
					<td><%= attachment_image_tag cart_item.item, :image, :fill,50, 30, format: 'jpeg', fallback: "no_image.jpg", size:'50x30' %>
						<%= cart_item.item.name %></td>
					<td><%= "¥#{(cart_item.item.non_tax_price* 1.1).round}（税込）"  %></td>
					<td><%= form_for cart_item do |f| %>
						<%= f.text_field :amount %>
						<%= f.submit "変更", class: 'btn-sm btn-primary' %>
						<% end %></td>
					<td><%= "¥#{(cart_item.item.non_tax_price*cart_item.amount* 1.1).round}（税込）"  %></td>
					<td><%= button_to '削除する', cart_item_path(cart_item), method: :delete, data: {confirm: '商品を削除しますか？'}, class: 'btn-sm btn-danger center-block'%></td>
				    <% total = total + (cart_item.item.non_tax_price*cart_item.amount*1.1).round %>
				</tr>

			<% end %>
		</tbody>
	</table>
	<div class= "row">
	  <div class= "col-sm-3">
	  <%= link_to "買い物を続ける", items_path, class: 'btn-sm btn-primary' %>
	  </div>
	  <div class= "col-sm-6">
	  </div>
	  <div class= "col-sm-3">
		  <h4> 合計金額<%= total %>円</h4>
	  </div>
    </div>
      <div class= text-right>
      	<%= link_to "情報入力に進む", cart_items_info_path, class: 'btn-sm btn-primary' %><br>
      	<br>
      </div>
</div>