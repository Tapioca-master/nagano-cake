<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>会員一覧画面</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>会員ID</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
                <% @customers.each do |customer| %>
                <tr>
                    <td>
                        <%= customer.id %>
                    </td>
                    <td>
                        <%= link_to "#{customer.name_last}#{customer.name_first}", admins_customer_path(customer) %>
                    </td>
                    <td>
                        <%= customer.email %>
                    </td>
                    <td>
                        <%= customer.is_active ? "有効" : "退会済" %>
                    </td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
    <div class="row">
            <%= paginate @customers %>
        </div>
</div>