<h1>会員編集画面</h1>
<%= form_for [:admins, @customer] do |f| %>
<table>
    <tr>
        <th>顧客ID</th>
        <td>
            <%= @customer.id %>
        </td>
    </tr>
    <tr>
        <th>氏名</th>
        <td>
            <%= f.text_field :name_last %>
            <%= f.text_field :name_first %>
        </td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td>
            <%= f.text_field :name_last_kana %>
            <%= f.text_field :name_first_kana %>
        </td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td>
            <%= f.text_field :postal_code %>
        </td>
    </tr>
    <tr>
        <th>住所</th>
        <td>
            <%= f.text_field :address %>
        </td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td>
            <%= f.text_field :phone_number %>
        </td>
        <td></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td>
            <%= @customer.email %>
        </td>
    </tr>
    <tr>
        <th>会員ステータス</th>
        <td>
            <label>
                <%= f.radio_button :is_active, true %>有効</label>
            <label>
                <%= f.radio_button :is_active, false %>無効</label>
        </td>
    </tr>
</table>
<%= f.submit "変更を保存する" %>
<% end %>