<h1>会員詳細画面</h1>
<table>
	<tr>
		<th>顧客ID</th>
		<td><%= @customer.id %><%= @customer.is_active ? "有効会員" : "無効会員" %></td>
	</tr>
	<tr>
		<th>氏名</th>
		<td><%= @customer.name_last %><%= @customer.name_first %></td>
	</tr>
	<tr>
		<th>フリガナ</th>
		<td><%= @customer.name_last_kana %><%= @customer.name_first_kana %></td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td><%= @customer.postal_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<!-- バリデーション改修後 -->
		<td><%= @customer.address %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<!-- バリデーション改修後 -->
		<td><%= @customer.phone_number %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= @customer.email %></td>
	</tr>
</table>
<%= link_to "編集する", edit_admins_customer_path(@customer) %>
