<div class="row">
    <div class="col-md-12">
        <h1>ジャンル追加・一覧画面</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <%= form_for @genre, :url => { :controller => :genres, :action => :create } do |f| %>
        <p style="display: inline-block;" >
        </style>ジャンル</p>
        <%= f.text_field :name %>
        <label>
            <%= f.radio_button :is_active, true %>有効</label>
        <label>
            <%= f.radio_button :is_active, false %>無効</label>
        <%= f.submit "追加", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>ジャンル</th>
                <th>状態</th>
                <th></th>
            </tr>
            <% @genres.each do |genre| %>
            <tr>
                <td>
                    <%= genre.name %>
                </td>
                <td>
                    <p>
                        <!-- 三項演算子 -->
                        <%= genre.is_active ? "有効" : "無効" %>
                    </p>
                </td>
                <td>
                    <%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-primary" %>
                </td>
            </tr>
            <% end %>
        </table>
    </div>
    <div class="col-md-6">
    </div>
</div>