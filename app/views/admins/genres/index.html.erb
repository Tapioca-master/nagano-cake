<h1>ジャンル追加・一覧画面</h1>

<%= form_for @genre, :url => { :controller => :genres, :action => :create } do |f| %>
<p>ジャンル</p>
<%= f.text_field :name %>
<label><%= f.radio_button :is_active, true %>有効</label>
<label><%= f.radio_button :is_active, false %>無効</label>
<%= f.submit "追加" %>
<% end %>

<% @genres.each do |genre| %>
<table>
    <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
    </tr>
    <tr>
        <td>
            <%= genre.name %>
        </td>
        <td>
        	<p>
        	<!-- 三項演算子 -->
        	<%= genre.is_active ? "有効" : "無効" %>
        	</p>
        </td>
        <td>
        	<%= link_to "編集する", edit_admins_genre_path(genre) %>
        </td>
    </tr>
</table>
<% end %>

