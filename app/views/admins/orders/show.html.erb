<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>注文詳細画面</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>購入者</th>
                    <td>
                        <%= link_to "#{@order.customer.name_last}#{@order.customer.name_first}", admins_customer_path(@order.customer) %>
                    </td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                        <%= "#{@order.customer.name_last}#{@order.customer.name_first}" %>
                    </td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td>
                        <%= @order.payment %>
                    </td>
                </tr>
                <tr>
                    <th>注文ステータス</th>
                    <td>
                        <%= form_for @order, url: admins_order_path, html: {method: 'PATCH'}  do |f| %>
                       <%= f.select :order_status, Order.order_statuses.keys.to_a, {} %>
                        <%= f.submit "更新", class: "btn btn-primary" %>
                        <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <tr>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>製作ステータス</th>
                </tr>
                <% price_sum = 0 %>
                <% @order_items.each do |order_item| %>
                <% price_sum += order_item.tax_price %>
                <tr>
                    <td>
                        <%= order_item.item.name %>
                    </td>
                    <td>
                        <%= order_item.tax_price %>
                    </td>
                    <td>
                        <%= order_item.amount %>
                    </td>
                    <td>
                        <%= order_item.tax_price * order_item.amount %>
                    </td>
                    <td>
                        <%= form_for order_item do |f| %>

                        <%= f.select :production_status, OrderItem.production_statuses.keys.to_a, {}, :onchange => 'this.form.submit()' %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col-md-4">
            <table class="table">
                <tr>
                    <th>商品合計</th>
                    <td>
                        <%= "#{price_sum}円" %>
                    </td>
                </tr>
                <tr>
                    <th>送料</th>
                    <td>
                        <%= "#{@order.shipping}円" %>
                    </td>
                </tr>
                <tr>
                    <th>請求額合計</th>
                    <td>
                        <%= "#{price_sum + @order.shipping}円" %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>