<h3>商品 新規登録画面</h3>

<%= form_for(@item) do |f| %>

	<%= attachment_image_tag @item, :image, fallback: "no_image.jpg"%>
	<%= f.attachment_field :image %>

	  <div>
		<label>商品名</label>
		<%= f.text_field :name %>
	  </div>

	  <div>
		<label>商品説明</label>
		<%= f.text_area :introduction %>
	  </div>
	  
	  <div>
	  	<label>ジャンル</label>
	  	<%= f.select :genre_id, Item.genre_ids.keys, {prompt: '選択してください'} %>
	  </div>

	  <div>
		<label>税抜価格</label>
		<%= f.text_field :introduction %>円
	  </div>
	  
	  <div>
	  	<label>販売<br>ステータス</label>
	  	<%= f.select :sales_status, Item.sales_statuses.keys, {prompt: '選択してください'} %>
	  </div>

	  <div>
	  	<%= f.submit "新規登録" %>
	  </div>

<% end %>
