<div class="row">
    <h1>商品詳細画面</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <%= attachment_image_tag @item, :image, :fill, 230, 150, format: 'jpeg', fallback: "no_image.jpg", size:'230x150' %>
    </div>
    <div class="col-md-8">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>商品名</th>
                <td>
                    <%= @item.name %>
                </td>
            </tr>
            <tr>
                <th>商品詳細</th>
                <td>
                    <%= @item.introduction %>
                </td>
            </tr>
            <tr>
                <th>ジャンル</th>
                <td>
                    <%= @item.genre.name %>
                </td>
            </tr>
            <tr>
                <th>税込価格（税抜価格）</th>
                <td>
                    <%= "#{(@item.non_tax_price * 1.1).round}（#{@item.non_tax_price.round}）円" %>
                </td>
            </tr>
            <tr>
                <th>販売ステータス</th>
                <td>
                    <%= @item.sales_status %>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-primary" %>
</div>