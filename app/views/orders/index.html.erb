<h3>注文履歴一覧</h3>

<table class="table">
    <tbody>
        <tr>
            <th>注文日</th>
			<th>配送先</th>
      		<th>注文商品</th>
      		<th>支払い金額</th>
        	<th>ステータス</th >
      		<th>注文詳細</th>
        </tr>


<% @orders.each do |order| %>
  <% order_item = OrderItem.where(order_id: order.id) %>
        <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.postal_code %><br>
            	<%= order.ship_address %><br>
            	<%= order.ship_name %></td>
            <td><% order_item.each do |order_item| %>
                <%= order_item.item.name %><br>
                <% end %></td>
        　　<td>
            <% sum = 0 %>
            <% order_item.each do |order_item| %>
            <% sum += order_item.tax_price %>
            <% end %>
            <%= sum + order.shipping %>円</td>
            <td><%= order.order_status %></td>
            <td><%=link_to "表示する", order_path(order) %></td>
        </tr>
           <% end %>
    </tbody>
</table>


