<h3>注文履歴一覧</h3>

<table class="table">
    <tbody>
        <tr>
            <th>注文日</th>
			<th>配送先</th>
      		<th>注文商品</th>
      		<th>支払い金額</th>
        	<th>ステータス</th >
      		<th>注文詳細</th>
        </tr>
        <% @orders.each do |orders| %>
        <tr>
            <td><%= orders.created_at %></td>
            <td><%= "#{current_customer.postal_code}" %><br>
            	<%= "#{current_customer.address}" %><br>
            	<%= "#{current_customer.name_last_kana}　#{current_customer.name_first_kana}" %></td>
            <td><%= "#{current_customer.orders}" %></td>
            <td><%= "１００００円" %></td>
            <td><%= "オーダーステータス" %></td>
            <td><%=link_to "表示する" %></td>
        </tr>
        <% end %>
    </tbody>
</table>