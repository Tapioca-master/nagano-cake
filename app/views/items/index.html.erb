<div class="container">
    <div class="row">
        <div class="col-md-2">
            <table class="table">
                <tr>
                    <th>ジャンル検索</th>
                </tr>
                <% @genres.each do |genre| %>
                <tr>
                    <td>
                        <%= link_to genre.name, items_genre_path(genre) %>
                    </td>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col-md-10">
            <p>
                <%= @items.first.genre.name %>
                <%= "（全#{@items.length}件）" %>
            </p>
            <div>
                <% @items.each do |item| %>
                <%= attachment_image_tag item, :image, :fill, 150, 100, format: 'jpeg', fallback: "no_image.jpg", size:'150x100' %>
                <p>
                    <%= link_to item.name, item_path(item) %>
                </p>
                <p>
                    <%= "¥#{((item.non_tax_price * 1.1).floor).to_s(:delimited)}" %>
                </p>
                <% end %>
            </div>
        </div>
    </div>
</div>