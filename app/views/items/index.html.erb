<div class="container" style="padding-top: 30px">
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <b>ジャンル検索</b>
                </div>
                <table class="table">
                    <% i = 0 %>
                    <% @genres.each do |genre| %>
                    <tr>
                        <td>
                            <%= link_to genre.name, items_genre_path(genre) %>
                        </td>
                        <td>
                            <span class="badge">
                                <%= @genre_count[i].to_s %>
                            </span>
                            <% i += 1 %>
                        </td>
                    </tr>
                    <% end %>
                </table>
            </div>
        </div>
        <div class="col-md-10">
            <ul class="nav nav-pills nav-stacked" style="margin-bottom: 10px;">
                <li role="presentation" class="active">
                    <a>
                        <b><%= @items.first.genre.name %></b>
                        <span class="badge"><%= "#{@items_count}件" %></span>
                    </a>
                </li>
            </ul>
            <div>
                <% @items.each do |item| %>
                <div style="float: left; padding: 2px;">
                    <%= link_to item_path(item) do %>
                    <%= attachment_image_tag item, :image, :fill, 230, 150, format: 'jpeg', fallback: "no_image.jpg", size:'230x150' %>
                    <% end %>
                    <h5 style="text-align: center; padding-top: 20px;">
                        <b>
                            <%= link_to item.name, item_path(item) %></b>
                    </h5>
                    <h5 style="text-align: center; padding-bottom: 30px;"><span class="label label-primary">
                            <%= "¥#{((item.non_tax_price).floor).to_s(:delimited)}" %></span>
                    </h5>
                </div>
                <% end %>
                <div style="text-align: center; clear: both;">
                    <%= paginate @items %>
                </div>
            </div>
        </div>
    </div>
</div>